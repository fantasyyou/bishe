<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#f0f0f0"
tools:context=".Verification">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="短信验证"
    android:textColor="#000"
    android:textSize="22sp"
    android:background="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="@drawable/divisionline"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:text="卡号"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cardnumber"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:paddingRight="10dip"
            android:textColor="#84c1ff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:text="卡密码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.5"
            android:hint="请输入"
            android:textColor="#84c1ff"
            android:inputType="textVisiblePassword"
            android:gravity="center_vertical|right"
            android:paddingRight="10dip"
            android:textSize="15dp"
            android:background="@null"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@drawable/divisionline"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:text="银行预留手机号"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/bindphone"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.5"
            android:textColor="#84c1ff"
            android:gravity="center_vertical|right"
            android:paddingRight="10dip"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@drawable/divisionline"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline1">>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.8"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:text="短信验证码"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/verificationcode"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.5"
            android:hint="请输入6位数字"
            android:inputType="textVisiblePassword"
            android:textColor="#84c1ff"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:textSize="15dp"
            android:background="@null"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_weight="0.8"
            android:text="获取验证码"
            android:gravity="center_vertical|right"
            android:paddingRight="10dip"
            android:onClick="getCode"
            android:textColor="#ff0000"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:text="立即绑定"
        android:onClick="binding"
        android:textColor="#ffffff"
        android:background="#ff0000"/>
</LinearLayout>